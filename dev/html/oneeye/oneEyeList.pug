extends /_src/_pug/_extend_html5

block append css
    link(href=`${pathSettingHtml}css/oneEye.css`, type='text/css', rel='stylesheet')

block contents
    #container.pageClassSub
        #content(role='main')
            .content-inner
                //nav.breadcrumb
                    .location-area
                        ol.location-content
                            li
                                a(href="#") 홈
                            li
                                a(href="#") 문화체험
                            li
                                a.on(href="#") 한 눈에 보는 문화정보
                    .share-area
                        ul.share-content
                            li
                                a.link-share(href="#")
                            li
                                a.link-print(href="#")
                section.section-main
                    .section-inner
                        .title-area
                            h1.title-h1 한눈에 보는 문화정보
                                |
                                span.txt 일상문화의 시대, 공연/전시/축제 등 다채로운 문화정보를 찾아보세요.
                
                section.section-search
                    .section-inner
                        .area-option
                            fieldset
                                legend 주제별 필터
                                .search-category
                                    .search-head
                                        input#filterItem01(type="checkbox")
                                        label.filter-main(for="filterItem01")
                                            span.txt 주제별
                                    ul.search-list
                                        li.item
                                            input#filterItem01-01(type="checkbox")
                                            label.filter-label(for='filterItem01-01')
                                                .circle-item(area-hidden="true")
                                                span.txt 문화예술
                                        li.item
                                            input#filterItem01-02(type="checkbox")
                                            label.filter-label(for='filterItem01-02')
                                                .circle-item(area-hidden="true")
                                                span.txt 문화유산
                                .search-category
                                    .search-head
                                        input#filterItem02(type="checkbox" checked)
                                        label.filter-main(for="filterItem02")
                                            span.txt 분야별
                                    ul.search-list
                                        li.item
                                            input#filterItem02-01(type="checkbox" checked)
                                            label.filter-label(for='filterItem02-01')
                                                .circle-item(area-hidden="true")
                                                span.txt 도서
                                        li.item
                                            input#filterItem02-02(type="checkbox")
                                            label.filter-label(for='filterItem02-02')
                                                .circle-item(area-hidden="true")
                                                span.txt 문화유산
                                .search-category
                                    .search-head
                                        input#filterItem03(type="checkbox" checked)
                                        label.filter-main(for="filterItem03")
                                            span.txt 대상별
                                    ul.search-list
                                        li.item
                                            input#filterItem02-01(type="checkbox")
                                            label.filter-label(for='filterItem02-01')
                                                .circle-item(area-hidden="true")
                                                span.txt 도서
                                            .sub-list
                                                .sub-item 
                                                    input#filterSub01(type="checkbox")
                                                    label.filter-sub(for="filterSub01")
                                                        span.txt 어린이
                                                .sub-item 
                                                    input#filterSub02(type="checkbox")
                                                    label.filter-sub(for="filterSub02")
                                                        span.txt 청소년
                                                .sub-item 
                                                    input#filterSub03(type="checkbox")
                                                    label.filter-sub(for="filterSub03")
                                                        span.txt 성인
                                                .sub-item 
                                                    input#filterSub04(type="checkbox")
                                                    label.filter-sub(for="filterSub04")
                                                        span.txt 어르신

                                        li.item
                                            input#filterItem02-02(type="checkbox")
                                            label.filter-label(for='filterItem02-02')
                                                .circle-item(area-hidden="true")
                                                span.txt 문화유산
                                .search-option
                                    button.btn-reset(type="button")
                                        span.txt 전체해제
                        .area-search