extends /_src/_pug/_extend_html5

block append css
    link(href=`${pathSettingHtml}css/oneEye.css`, type='text/css', rel='stylesheet')

block contents
    #container.pageClassSub
        #content(role='main')
            .content-inner
                //nav.breadcrumb
                    .location-area
                        ol.location-content
                            li
                                a(href="#") 홈
                            li
                                a(href="#") 문화체험
                            li
                                a.on(href="#") 한 눈에 보는 문화정보
                    .share-area
                        ul.share-content
                            li
                                a.link-share(href="#")
                            li
                                a.link-print(href="#")
                section.section-main
                    .section-inner
                        .title-area
                            h1.title-h1 한눈에 보는 문화정보
                                |
                                span.txt 일상문화의 시대, 공연/전시/축제 등 다채로운 문화정보를 찾아보세요.
                
                section.section-search
                    .section-inner
                        .area-option
                            fieldset
                                legend 주제별 필터
                                ul 
                                    li 
                                        input#filterItem01_01(type="checkbox")
                                        label.filter_label(for='filterItem01_01')
                                            .circle-item(area-hidden="true")
                                            span.txt 문화예술

                                .filter__mask.filter__mask--topic
                                    .filter__set
                                    input#filterItem01_01.filter__checkbox(type='checkbox' name='org_genre_chk' value='문화예술')
                                    label.filter__label.filter__label--art(for='filterItem01_01')
                                        i
                                        span
                                   


                        .area-search
