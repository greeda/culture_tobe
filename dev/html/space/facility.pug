block append script
    script.
        let $boxSearch = $('.box-search');

        $boxSearch.find('.btn-open').on('click', function(){
            if ($boxSearch.hasClass('open')) {
                $boxSearch.removeClass('open');
            }
            else {
                $boxSearch.addClass('open');
            }
        });

